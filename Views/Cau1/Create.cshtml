@model MidTerm.ViewModel.SanPhamViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Thêm mới sản phẩm</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenSp"></label>
        <input asp-for="TenSp" class="form-control" />
        <span asp-validation-for="TenSp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonViTinh"></label>
        <input asp-for="DonViTinh" class="form-control" />
        <span asp-validation-for="DonViTinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonGia"></label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hinh"></label>
        <input asp-for="Hinh" type="file" class="form-control" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
